{
  "manifest_version": 2,
  "name": "Discount Detective",
  "version": "1.0.0",
  "description": "Track the prices of your favorite products on Amazon and get notified when they go on sale.",
  "permissions": [
    "activeTab",
    "https://www.amazon.com/*",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": ["index.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Discount Detective",
    "default_popup": "popup.html"
  }
}
